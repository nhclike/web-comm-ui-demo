* {
  margin: 0;
  padding: 0;
  outline: none;
  box-sizing: border-box;
}
.clearfloat:after {
  /*最简方式*/
  content: '';
  display: block;
  clear: both;
}
.pull-right {
  float: right;
}
.pull-left {
  float: left;
}
.section {
  padding-top: 90px;
}
.section .main_container {
  width: 100%;
}
.section .main_container .Menu {
  text-align: center;
  position: absolute;
  top: 90px;
  left: 0;
  z-index: 999;
  width: 280px;
  padding: 0;
  background: #EEF5FF;
}
.section .main_container .Menu ul.mainMenu {
  text-align: center;
  margin-top: 20px;
  height: 100%;
}
.section .main_container .Menu ul.mainMenu li {
  overflow: hidden;
}
.section .main_container .Menu ul.mainMenu li div.titleMenu {
  width: 100%;
  padding: 0 15px 0 45px;
  background: #D3E5FF;
  color: #0093F9;
  cursor: pointer;
  height: 66px;
  line-height: 66px;
  text-align: center;
  font-size: 28px;
}
.section .main_container .Menu ul.mainMenu li div.titleMenu img.pull-left {
  margin-top: 20px;
  margin-right: 5px;
}
.section .main_container .Menu ul.mainMenu li div.titleMenu img.pull-right {
  margin-top: 25px;
}
.section .main_container .Menu ul.mainMenu li ul.subMenu li {
  text-align: center;
  height: 66px;
  cursor: pointer;
  line-height: 66px;
  font-size: 24px;
  color: #596E81;
}
.section .main_container .Menu ul.mainMenu li ul.subMenu li.chosen {
  background: #fff;
  color: #0093F9;
}
.section .main_container #context_show {
  position: absolute;
  top: 90px;
  left: 0;
  padding-left: 280px;
  width: 100%;
  background-color: #fff;
}
